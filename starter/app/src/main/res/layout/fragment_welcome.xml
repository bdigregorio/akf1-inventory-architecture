<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_screen_large_spacing"
            android:text="@string/welcome_text"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/textWelcomeAdvance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_screen_med_spacing"
            android:text="@string/welcome_advance"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/button"
            style="@style/button_style"
            android:layout_marginTop="@dimen/login_screen_large_spacing"
            android:text="@string/button_advance" />
    </LinearLayout>
</layout>
